pipeline {
    agent any 
    stages {
        stage('--Display a failure message--') { 
            steps {
                sh "echo '---------------------'"
                sh "echo 'Failure'"
                sh "echo '---------------------'"
            }
        }
        stage('--Display a success message--') { 
            steps {
                sh "echo '---------------------'"
                sh "echo 'Sucess'"
                sh "echo '---------------------'"
            }
        }
    }
}
